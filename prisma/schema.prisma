generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ingredients {
  id       Int       @id @default(autoincrement())
  name     String
  category String
  unit     String
  recipes  recipes[]
}

model meals {
  id       Int       @id @default(autoincrement())
  name     String
  location String
  servings BigInt
  plan     plan[]
  recipes  recipes[]
}

model plan {
  id      Int   @id @default(autoincrement())
  meal_id Int
  serves  Int
  locked  Int?
  meals   meals @relation(fields: [meal_id], references: [id], onUpdate: NoAction)
}

model recipes {
  id            Int         @id @default(autoincrement())
  meal_id       Int
  ingredient_id Int
  qty           Decimal
  ingredients   ingredients @relation(fields: [ingredient_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  meals         meals       @relation(fields: [meal_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}
